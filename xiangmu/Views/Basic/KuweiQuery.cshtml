    <script type="text/javascript">
       $(function () {
            $("#btnFrist").click(function () {
                //将pageIndex = 1
                bindData(1);
            });

            $("#btnUp").click(function () {
                //当前页 = 当前页 -1
                var pageIndex = parseInt($("#txtPageIndex").val()) - 1;
                bindData(pageIndex);
            });

            $("#btnNext").click(function () {
                //当前页 = 当前页 + 1
                var pageIndex = parseInt($("#txtPageIndex").val()) + 1;
                bindData(pageIndex);
            });

            $("#btnLast").click(function () {
                bindData(9999999);
            });

            $("#btnGo").click(function () {
                //获取当前文本框中的页
                var pageIndex = parseInt($("#txtPageIndex").val());
                bindData(pageIndex);
            });
            //绑定查询按钮事件
            $("#btnSearch").click(function () {
                bindData(1);
            });
            bindData(1);
        });
        function bindData(pageIndexValue) {

        var startDate = $("[name=StartDate]").val();
        var endDate = $("[name=EndDate]").val();
        var names = $("#txtName").val();
        //获取数据
        $.ajax({
           url: "@Url.Action("GetKuweis")",
            data: {name:names,pageIndex:pageIndexValue,StartDate: startDate, EndDate: endDate},/*赋值*/
            dataType: "json",
            type: "get",
            success: function (result) {
                //设置文本框中显示的当前页
                $("#lbMsg").html("当前第"+result.PageIndex+"页"+"    共计"+result.PageCount+"页    共有"+result.Count+"条");
                $("#txtPageIndex").val(result.PageIndex);

                //清空所有表格（数据行）行
                $("table tr:gt(0)").remove();
                //循环遍历所有数据并显示到控件
                $.each(result.KuweilInfies, function (index, value) {
                    var str = "<tr>";
                     str += "<td>" + "1" + "</td>";    
                    str += "<td>" + value.Id + "</td>";
                    str += "<td>" + value.Name + "</td>";
                    str += "<td>" + value.Warehouseid + "</td>";
                    str += "<td>" + value.KuWeiTypeid + "</td>";
                    str += "<td>" + value.Forbidden + "</td>";
                    str += "<td>" + value.Defaults + "</td>";
                    str += "<td>" + value.AddTime + "</td>";
                    str += "<td>";
                    str += "<a href='/Basic/KuweiQuery/" + value.kuweiid + "'>修改</a> | <a href='#'>删除</a>"
                    str+="</td>";
                    str += "</tr>";
                    $("table").append(str);
                });
            }
        });
        }
        // Id = item.kuweiid, Name = item.kuweiname, Warehouseid = item.warehouseid, KuWeiTypeid = item.kuWeiTypeid, Forbidden = item.forbidden, Defaults = item.defaults, AddTime = item.AddTime.ToString("yyyy-MM-dd HH:mm:ss")
